@model BookStore.ViewModels.CreateBookViewModel

@{
    ViewBag.Title = "Crianndo um Novo Livro...";
}

<h2>Novo Livro</h2>

<form>
    <div class="form-group">
        @Html.LabelFor(model => model.Titulo)  @*<label for="exampleInputEmail1">Email address</label>*@
        @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })  @*<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">*@
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ISBN)  @*<label for="exampleInputEmail1">Email address</label>*@
        @Html.EditorFor(model => model.ISBN, new { htmlAttributes = new { @class = "form-control" } })  @*<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">*@
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.DataLancamento)  @*<label for="exampleInputEmail1">Email address</label>*@
        @Html.EditorFor(model => model.DataLancamento, new { htmlAttributes = new { @class = "form-control" } })  @*<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">*@
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CategoriaId)  @*<label for="exampleInputEmail1">Email address</label>*@
        @Html.DropDownListFor(
                    x => x.CategoriaId,
                    Model.Categoriaoptions,
                    "Selecione uma opção...",
                    new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
</form>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
