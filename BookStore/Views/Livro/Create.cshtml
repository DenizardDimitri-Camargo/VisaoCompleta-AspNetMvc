@model BookStore.ViewModels.EditorBookViewModel

@{
    ViewBag.Title = "Crianndo um Novo Livro...";
    //Layout = "~/Views/Shared/_LayoutNovo.cshtml";
}

@helper MinhaFuncao(string nome) //helpers podem ter código c#, html ou ambas)
{
    <text> Vcê está logado como: @nome </text>
}

<p>
    @MinhaFuncao("Dimitri Camargo")
</p>

<h2>Novo Livro</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" }) <!--teste true e false porque não entendi kk-->

    <div class="alert alert-danger">
        @Html.ValidationMessage("Mensagem") <!-- exibiu a mensagem vinda do controller-->
    </div>


    @Html.Partial("Partials/EditorBookPartial", Model)

    @Html.EditorFor(x => x.Age)
    @Html.ValidationMessageFor(x => x.Age)

    <button type="submit" class="btn btn-default">Criar</button>
}



@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
