@model BookStore.ViewModels.EditorBookViewModel

@{
    ViewBag.Title = "Crianndo um Novo Livro...";
}

@helper MinhaFuncao(string nome) //helpers podem ter código c#, html ou ambas)
{
    <text> Vcê está logado como: @nome </text>
}

<p>
    @MinhaFuncao("Dimitri Camargo")
</p>

<h2>Novo Livro</h2>

@using (Html.BeginForm())
{
    @Html.Partial("Partials/EditorBookPartial", Model)

    <button type="submit" class="btn btn-default">Criar</button>
}



@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
